# Use an Ubuntu 18.04 base for our staging server
FROM vm/ubuntu:18.04

# Install Python and necessary tools
RUN apt-get update && apt-get install -y python3 curl

# Install an older version of Node.js that is compatible with Ubuntu 18.04
RUN curl -sL https://deb.nodesource.com/setup_12.x | bash - && \
    apt-get install -y nodejs

# Check Node and npm versions
RUN node -v && npm -v

# Copy the repository contents to the VM
COPY . /var/www/html

# Create some test HTML files in the web server directory
RUN echo '<b>some html</b>' > /var/www/html/hello.html
RUN echo '<b>another file</b>' > /var/www/html/another.html

# Change to the web server directory and start a simple Python web server in the background
WORKDIR /var/www/html
RUN BACKGROUND python3 -m http.server 80

# Expose the website
EXPOSE WEBSITE http://localhost:80

